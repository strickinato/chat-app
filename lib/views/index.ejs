<%= include ./partials/head.ejs %>
<div id="form-container">
  <form action="/messages" method="post" id="chat-input-form">
    <input type="submit" value="Say to Aaron">
    <span><input type="text" name="body" id="chat-input"></span>
  </form>
</div>
<div id="chat-container">
  <ul id="chat-output">
  <% messages.forEach(function(message){ %>
    <li class="<%= message.aaron ? "from-aaron" : "from-user" %>"><%= message.body %></li>
  <% }); %>
  </ul>
</div>

<%= include ./partials/foot.ejs %>
